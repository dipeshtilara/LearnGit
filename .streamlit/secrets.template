# Streamlit Secrets Template
# Copy this file to .streamlit/secrets.toml and customize the values
# DO NOT commit secrets.toml to version control

# Database Configuration
# DATABASE_URL = "sqlite:///app.db"
# DATABASE_PASSWORD = "your_database_password"

# API Keys
# OPENAI_API_KEY = "sk-your-openai-api-key"
# HUGGINGFACE_API_TOKEN = "your-huggingface-token"
# ANTHROPIC_API_KEY = "your-anthropic-key"

# External Services
# SMTP_SERVER = "smtp.gmail.com"
# SMTP_PORT = 587
# SMTP_USERNAME = "your-email@gmail.com"
# SMTP_PASSWORD = "your-app-password"

# Analytics
# GOOGLE_ANALYTICS_ID = "GA-XXXXXXXXX"
# MIXPANEL_TOKEN = "your-mixpanel-token"

# Feature Flags
# ENABLE_ANALYTICS = true
# ENABLE_DEBUG_MODE = false
# ENABLE_USER_ACCOUNTS = true

# Custom Configuration
# APP_NAME = "GitHub Tutorial"
# MAX_UPLOAD_SIZE = "50MB"
# SESSION_TIMEOUT = 3600

# Security
# SECRET_KEY = "your-secret-key-for-session-encryption"
# ALLOWED_HOSTS = "yourdomain.com,localhost"

# Social Authentication (if implementing)
# GOOGLE_OAUTH_CLIENT_ID = "your-google-client-id"
# GOOGLE_OAUTH_CLIENT_SECRET = "your-google-client-secret"
# GITHUB_CLIENT_ID = "your-github-client-id"
# GITHUB_CLIENT_SECRET = "your-github-client-secret"